<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>SessionManagement(HttpSession)</display-name>
  <welcome-file-list>
    <welcome-file>LoginPage1.html</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>loginPage</servlet-name>
    <servlet-class>com.StateManagement.LoginValidator</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>loginPage</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>bookPage</servlet-name>
    <servlet-class>com.StateManagement.BookPickerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>bookPage</servlet-name>
    <url-pattern>/buybook</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>calculatePage</servlet-name>
    <servlet-class>com.StateManagement.CalculatorServlet</servlet-class>
    
  </servlet>
  <servlet-mapping>
    <servlet-name>calculatePage</servlet-name>
    <url-pattern>/calculate</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>terminatePage</servlet-name>
    <servlet-class>com.StateManagement.TerminationServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>terminatePage</servlet-name>
    <url-pattern>/terminate</url-pattern>
    
  </servlet-mapping>
  
  
</web-app>